{
  "name": "digital-pet-project",
  "version": "0.1.0",
  "description": "A cute and reactive digital pet that runs on Pi400 during livestreams with nostalgic title sequences and system metric reactivity",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "nodemon --exec ts-node src/main.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json}\"",
    "clean": "rm -rf dist/"
  },
  "keywords": [
    "digital-pet",
    "raspberry-pi",
    "pi400",
    "livestream",
    "reactive",
    "system-metrics",
    "nintendo",
    "retro",
    "animation"
  ],
  "author": "Digital Pet Team",
  "license": "MIT",
  "dependencies": {
    "pixi.js": "^7.0.0",
    "systeminformation": "^5.0.0",
    "express": "^4.18.0",
    "ws": "^8.0.0",
    "yaml": "^2.0.0",
    "typescript": "^4.9.0",
    "ts-node": "^10.9.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^18.0.0",
    "@types/ws": "^8.5.0",
    "@types/systeminformation": "^3.54.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.0.0",
    "nodemon": "^2.0.0",
    "prettier": "^2.7.0",
    "ts-jest": "^29.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}